<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><p><%= f.label :email %></p>
  <p><%= f.email_field :email %></p></div>

  <div><p><%= f.label :password %></p>
  <p><%= f.password_field :password %></p></div>

  <div><% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> 
   	<%= f.label :remember_me %></p></div>
  <% end -%>

  <p><%= f.submit "Logar" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>