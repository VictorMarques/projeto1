<h1 align="center">Listagem de Clientes</h1>

<table border=1 align="center" height="50" width="60%">
  <tr>
    <th align="center">Nome</th>
    <th align="center">Idade</th>
    
  </tr>

<% @clientes.each do |cliente| %>
  <tr>
    <td align="center"><%= cliente.nome %></td>
    <td align="center"><%= cliente.idade %></td>
    <td align="center"><%= link_to 'Mostrar', cliente %></td>
    <td align="center"><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
  </tr>
<% end %>
</table>

<br />

